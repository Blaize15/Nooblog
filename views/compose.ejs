<%- include("partials/header") -%>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        <label for="title">Title</label>
        <br>
        <input type="text" name="postTitle" class="title" id="title" placeholder="Compose text" required autocomplete="off">
        <br>
        <label for="post">Post</label>
        <br>
        <textarea name="post" id="post" cols="145" rows="10" required autocomplete="off"></textarea>
        <br>
        <button type="submit" class="publish">Publish</button>
    </form>
    


<%- include("partials/footer") -%>